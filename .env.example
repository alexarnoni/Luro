# App
ENV=production
APP_NAME=Luro
DEBUG=false
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_VALUE
LOG_LEVEL=INFO
ALLOWED_HOSTS=luro.example.com,localhost,127.0.0.1
ENABLE_CSRF_JSON=true
ENABLE_SECURITY_HARDENING=true
TURNSTILE_SITE_KEY=your_site_key
TURNSTILE_SECRET_KEY=your_secret_key

# Database
DATABASE_URL=postgresql+asyncpg://luro:password@db:5432/luro

# Email / magic link
RESEND_API_KEY=
RESEND_FROM_EMAIL="Luro <noreply@example.com>"
MAGIC_LINK_EXPIRY_MINUTES=15

# Security and rate limit
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW_SECONDS=900
LOGIN_RATE_LIMIT_IP_MAX=10
LOGIN_RATE_LIMIT_IP_WINDOW_SECONDS=600
LOGIN_RATE_LIMIT_EMAIL_MAX=5
LOGIN_RATE_LIMIT_EMAIL_WINDOW_SECONDS=3600

# AI Providers (optional)
LLM_PROVIDER=gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
INSIGHTS_MAX_PER_MONTH=5
